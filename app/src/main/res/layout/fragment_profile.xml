<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Profile.ProfileFragment">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProfilePic"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible">

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:columnCount="2"
            android:orientation="vertical"
            android:rowCount="15">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="@string/nombre" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:inputType="textPersonName"
                android:maxEms="9"
                android:minEms="7"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_last_n1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text="@string/apellido_paterno" />

            <EditText
                android:id="@+id/et_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:inputType="textPersonName"
                android:maxEms="9"
                android:minEms="7"
                android:singleLine="true"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_last_n2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:text="@string/apellido_materno" />

            <EditText
                android:id="@+id/et_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:inputType="textPersonName"
                android:maxEms="9"
                android:minEms="7"
                android:singleLine="true"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:text="@string/estatura" />

            <EditText
                android:id="@+id/np_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"

                android:layout_column="1"
                android:inputType="numberDecimal"
                android:maxEms="9"
                android:minEms="7"
                android:singleLine="true"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:text="@string/peso" />

            <EditText
                android:id="@+id/np_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"

                android:layout_column="1"
                android:inputType="numberDecimal"
                android:maxEms="9"
                android:minEms="7"
                android:singleLine="true"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:text="@string/fecha_de_nacimiento" />

            <EditText
                android:id="@+id/s_birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="1"
                android:inputType="text"
                android:maxEms="5"
                android:minEms="3"
                android:singleLine="true" />

            <Button
                android:id="@+id/btn_calendar"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_row="5"
                android:layout_column="1"
                android:background="@drawable/ic_baseline_calendar_today_24"
                android:translationX="120dp"
                android:visibility="invisible"
                app:backgroundTint="@color/f_claro"
                app:backgroundTintMode="screen"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                android:text="@string/sexo" />

            <Spinner
                android:id="@+id/s_gender"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_row="6"
                android:layout_column="1"
                android:entries="@array/Sexos"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_asma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="0"
                android:text="@string/asma" />

            <CheckBox
                android:id="@+id/chk_asthma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_row="8"
                android:layout_column="1"
                android:textSize="12sp"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_diabetes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="0"
                android:text="@string/diabetes" />

            <CheckBox
                android:id="@+id/chk_diabetes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_row="9"
                android:layout_column="1"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_hipertension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="10"
                android:layout_column="0"
                android:text="@string/hipertension" />

            <CheckBox
                android:id="@+id/chk_hypertension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_row="10"
                android:layout_column="1"
                tools:visibility="visible" />

        </GridLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imgProfilePic"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:contentDescription="TODO"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.76"
        app:srcCompat="@drawable/ic_person"
        tools:src="@drawable/ic_person" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/edit"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.628"
        app:layout_constraintStart_toEndOf="@+id/imgProfilePic" />

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.795"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        tools:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>